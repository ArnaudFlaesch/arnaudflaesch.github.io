{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "assignees": ["ArnaudFlaesch"],
  "packageRules": [
    {
      "groupName": "eslint-tslint",
      "matchPackageNames": ["/^eslint/", "/typescript-eslint/"]
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt", "/^@nuxt//","/^@nuxtjs//"]
    }
  ],
  "schedule": ["on wednesday and friday at 2:00 pm"]
}
