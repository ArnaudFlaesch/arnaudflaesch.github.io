# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf

[*.ts]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[*.scss, *.css]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2